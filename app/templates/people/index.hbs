{{outlet}}

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Average Score</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |person|}}
    <tr>
      <th>{{person.firstName}}</th>
      <td>{{person.lastName}}</td>
      <td>{{person.personScore}}</td>
      <td>
      {{#link-to 'people.edit' person.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
      <button class="btn btn-danger btn-xs" {{action 'deletePerson' person}}>Delete</button>
      {{#link-to 'people.goals.new' person.id class='btn btn-primary btn-xs'}}Add Goal{{/link-to}}
      {{#link-to 'people.goals' person.id class='btn btn-primary btn-xs'}}Show Goal(s){{/link-to}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
